@model IEnumerable<aula29_catalogoFilmes.Models.AtorModel>

@{
    ViewData["Title"] = "Atores";
}

<h1>Lista de Atores</h1>

<p>
    <a asp-action="Create">Inserir novo ator</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Exibir detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>>
            </td>
        </tr>
}
    </tbody>
</table>
